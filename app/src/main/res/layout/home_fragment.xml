<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/switcher_wrapper"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/featured_button"
                    android:text="@string/featured"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/new_and_popular_button"
                    android:text="@string/new_and_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/featured_wrapper"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:text="@string/featured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_and_popular_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="75dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/newest_videos"
                        android:padding="10dp" />

                    <it.sephiroth.android.library.widget.HListView
                        android:id="@+id/newest_videos"
                        android:layout_width="match_parent"
                        android:layout_height="240dp">

                    </it.sephiroth.android.library.widget.HListView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/newest_albums"
                        android:padding="10dp" />

                    <it.sephiroth.android.library.widget.HListView
                        android:id="@+id/newest_albums"
                        android:layout_width="match_parent"
                        android:layout_height="240dp">

                    </it.sephiroth.android.library.widget.HListView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/popular_videos"
                        android:padding="10dp" />

                    <it.sephiroth.android.library.widget.HListView
                        android:id="@+id/popular_videos"
                        android:layout_width="match_parent"
                        android:layout_height="240dp">

                    </it.sephiroth.android.library.widget.HListView>



                </LinearLayout>


            </RelativeLayout>




        </LinearLayout>



    </ScrollView>


</RelativeLayout>