<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/player_bg_wrapper"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/player_bg"
            android:scaleType="centerCrop"
            tools:src="@drawable/placeholder" />

    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/toolbar"
        android:background="@color/transparent_black"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/player_title"
            tools:text="Show player"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:visibility="visible"
        tools:visibility="visible"
        android:id="@+id/mini_player"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/mini_player_image"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize" />

        <at.markushi.ui.CircleButton
            android:id="@+id/mini_play_pause"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_pause"
            app:cb_color="@color/colorAccent"
            app:cb_pressedRingWidth="3dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Show player"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/mini_player_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mini_player_image"
            android:layout_toEndOf="@+id/mini_player_image"
            android:layout_marginLeft="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_above="@+id/progress_bar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/controls_wrapper">

        <TextView
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            tools:text="0:14:15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_time"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            tools:text="0:57:32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_time"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <at.markushi.ui.CircleButton
            android:id="@+id/play_pause"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@android:drawable/ic_media_pause"
            app:cb_color="@color/colorAccent"
            app:cb_pressedRingWidth="3dip"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <at.markushi.ui.CircleButton
            android:id="@+id/rew"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_media_rew"
            app:cb_color="@color/colorAccent"
            app:cb_pressedRingWidth="3dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/play_pause"
            android:layout_toStartOf="@+id/play_pause" />

        <at.markushi.ui.CircleButton
            android:id="@+id/ff"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_media_ff"
            app:cb_color="@color/colorAccent"
            app:cb_pressedRingWidth="3dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/play_pause"
            android:layout_toEndOf="@+id/play_pause" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controls_wrapper"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/video_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/audio_thumb"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buffer_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <SeekBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:progress="14"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />


</RelativeLayout>