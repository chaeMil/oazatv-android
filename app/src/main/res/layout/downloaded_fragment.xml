<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/free_space_wrapper"
        android:padding="12dp">

        <TextView
            android:id="@+id/space_text"
            tools:text="Used: 8GB | Oaza: 1.2GB | Available space: 2.5 GB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:background="@color/md_grey_200"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/space_text"
            android:id="@+id/space_wrapper"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/oaza_space"
                tools:layout_width="45dp"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

    <GridView
        android:clipToPadding="false"
        android:id="@+id/downloaded_grid_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="75dp"
        android:layout_below="@+id/free_space_wrapper">

    </GridView>

</RelativeLayout>