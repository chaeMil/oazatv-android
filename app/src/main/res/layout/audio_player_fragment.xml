<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/player_bg_wrapper"
            android:background="@color/colorPrimaryDarkest"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbars_wrapper"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <RelativeLayout
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/toolbar"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:animateLayoutChanges="true"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/back_wrapper"
                    android:background="@color/colorPrimary"
                    android:visibility="visible">

                    <ImageButton
                        android:background="@drawable/transparent_ripple"
                        android:src="@drawable/ic_action_navigation_arrow_back"
                        android:id="@+id/back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:visibility="visible"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <TextView
                    android:textColor="@color/white"
                    fontPath="@string/default_font_bold"
                    android:id="@+id/player_title"
                    tools:text="Show player"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/back_wrapper"
                    android:layout_toLeftOf="@+id/actions_wrapper"/>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:id="@+id/actions_wrapper"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.github.ybq.android.spinkit.SpinKitView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:id="@+id/buffer_bar"
                        style="@style/SpinKitView.ThreeBounce"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <ImageView
                        android:id="@+id/downloaded"
                        android:src="@drawable/ic_downloaded_white"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="8dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/share"
                        android:background="@drawable/transparent_ripple"
                        android:src="@drawable/ic_share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="8dp" />

                </LinearLayout>

            </RelativeLayout>


            <ru.rambler.libs.swipe_layout.SwipeLayout
                tools:visibility="gone"
                android:id="@+id/mini_player_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:id="@+id/mini_player"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/mini_player_image"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="?android:attr/actionBarSize" />

                    <ImageView
                        android:id="@+id/mini_play_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pause_dark"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Show player"
                        fontPath="@string/default_font_bold"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccentDarker"
                        android:textStyle="bold"
                        android:id="@+id/mini_player_text"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/mini_play_pause"
                        android:layout_toRightOf="@+id/mini_player_image"
                        android:singleLine="true"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <!--RIGHT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:gravity="right">
                </LinearLayout>

                <!--LEFT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:gravity="left">
                </LinearLayout>

            </ru.rambler.libs.swipe_layout.SwipeLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/thumb_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_below="@+id/toolbars_wrapper">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.chaemil.hgms.view.VideoThumbImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/audio_thumb"
                    android:scaleType="fitCenter"
                    android:background="@color/black" />

                <TextView
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    tools:text="#Dita #Spurkova #vyucovani #patek #praha #2016 #cesky #teaching #friday #prague #czech #nadeje #vnitrni #clovek #promena #moc #hope #inner #man #change #power"
                    android:id="@+id/tags"
                    fontPath="@string/default_font_bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false" />

                <TextView
                    tools:text="description text"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/description"
                    android:textColor="@color/white"
                    fontPath="@string/default_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/transparent_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/controls_wrapper"
            android:clipChildren="false"
            android:layout_alignParentBottom="true">

            <android.support.v7.widget.AppCompatSeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:id="@+id/seek_bar"
                tools:progress="14"
                android:layout_alignParentTop="true"
                android:progressTint="@color/transparent_white"
                android:thumbTint="@color/white"
                android:layout_marginTop="-6dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    tools:text="0:14:15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_time"/>

                <ImageView
                    android:layout_marginRight="16dp"
                    android:id="@+id/rew"
                    android:src="@drawable/rew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <at.markushi.ui.CircleButton
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/play_pause"
                    android:layout_width="56dp"
                    android:src="@drawable/pause"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="3dip"
                    android:layout_height="56dp" />

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/ff"
                    android:src="@drawable/ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    tools:text="0:57:32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_time" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>