<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/player_bg_wrapper"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/player_bg"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/toolbars_wrapper"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <RelativeLayout
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/toolbar"
                android:background="@color/transparent_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/player_title"
                    tools:text="Show player"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="visible"
                tools:visibility="gone"
                android:id="@+id/mini_player"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/mini_player_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/mini_play_pause"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pause"
                    app:cb_color="@color/transparent_white"
                    app:cb_pressedRingWidth="3dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Show player"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/mini_player_text"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mini_play_pause"
                    android:layout_toRightOf="@+id/mini_player_image"
                    android:singleLine="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thumb_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/toolbars_wrapper"
            android:layout_above="@+id/controls_wrapper"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/audio_thumb"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buffer_bar"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/type"
                tools:background="@drawable/thumb_corner_red_color"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/audio_thumb"
                android:layout_alignRight="@+id/audio_thumb">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/controls_wrapper"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/seek_bar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    tools:text="0:14:15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_time"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    tools:text="0:57:32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_time"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/play_pause"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/pause"
                    app:cb_color="@color/transparent_white"
                    app:cb_pressedRingWidth="3dip"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/rew"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/rew"
                    app:cb_color="@color/transparent_white"
                    app:cb_pressedRingWidth="3dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_pause"
                    android:layout_toStartOf="@+id/play_pause" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/ff"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ff"
                    app:cb_color="@color/transparent_white"
                    app:cb_pressedRingWidth="3dip"
                    android:layout_toRightOf="@+id/play_pause"
                    android:layout_toEndOf="@+id/play_pause"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatSeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:id="@+id/seek_bar"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:progress="14"
                android:progressTint="@color/transparent_white"
                android:thumbTint="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>