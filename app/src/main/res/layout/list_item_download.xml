<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <com.chaemil.hgms.view.VideoThumbImageView
                android:scaleType="centerCrop"
                android:id="@+id/thumb"
                android:background="@color/dark_gray"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp" />

        </RelativeLayout>

        <TextView
            tools:text="Video name sooooo long"
            fontPath="@string/default_font_bold"
            android:id="@+id/name"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/button_wrapper"
            android:layout_toRightOf="@+id/relativeLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="29.12.2015"
            android:id="@+id/date"
            android:textColor="@color/md_grey_700"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="downloading"
            android:id="@+id/status"
            android:textColor="@color/md_grey_700"
            android:gravity="center_vertical|right"
            android:layout_below="@+id/date"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout" />

        <ImageView
            android:id="@+id/pause"
            android:src="@drawable/ic_pause_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp" />

        <RelativeLayout
            android:id="@+id/button_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/context_menu"
                android:background="@drawable/transparent_ripple"
                android:src="@drawable/ic_action_navigation_more_vert" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/cancel_download"
                android:background="@drawable/transparent_ripple"
                android:src="@drawable/ic_navigation_close"
                android:visibility="gone" />

        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>