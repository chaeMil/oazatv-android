<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <com.chaemil.hgms.view.VideoThumbImageView
        android:scaleType="centerCrop"
        android:id="@+id/thumb"
        android:background="@color/dark_gray"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp" />

    <TextView
        tools:text="Video name sooooo long"
        fontPath="@string/slab_font"
        android:id="@+id/name"
        android:textSize="18sp"
        android:textColor="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/context_menu"
        android:layout_toStartOf="@+id/context_menu"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="29.12.2015"
        android:id="@+id/date"
        android:textColor="@color/md_grey_700"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/thumb"
        android:layout_toEndOf="@+id/thumb"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="532 views"
        android:id="@+id/views"
        android:textColor="@color/md_grey_700"
        android:gravity="right"
        android:layout_below="@+id/date"
        android:layout_toRightOf="@+id/thumb"
        android:layout_toEndOf="@+id/thumb"
        android:layout_marginTop="2dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/context_menu"
        android:background="@drawable/transparent_ripple"
        android:src="@drawable/ic_action_navigation_more_vert"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>