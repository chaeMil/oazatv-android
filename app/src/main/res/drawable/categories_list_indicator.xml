<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="0dp"
                android:top="10dp"
                android:bottom="6dp"
                android:drawable="@drawable/down_arrow">
            </item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="0dp"
                android:top="10dp"
                android:bottom="6dp"
                android:drawable="@drawable/up_arrow">
            </item>
        </layer-list>
    </item>
</selector>